<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <typeAliases>
        <package name="com.recruit.data.entity"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"></transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/ctrs"/>
                <property name="username" value="root"/>
                <property name="password" value="123456"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mapping/userMapper.xml"/>
        <mapper resource="mapping/jobMapper.xml"/>
        <mapper resource="mapping/categoryMapper.xml"/>
        <mapper resource="mapping/departmentMapper.xml"/>
        <mapper resource="mapping/resumeMapper.xml"/>
        <mapper resource="mapping/resumeJobPreferranceMapper.xml"/>
        <mapper resource="mapping/resumeEducationMapper.xml"/>
        <mapper resource="mapping/resumeWorkMapper.xml"/>
        <mapper resource="mapping/resumeProjectMapper.xml"/>
        <mapper resource="mapping/resumeAwardMapper.xml"/>
        <mapper resource="mapping/resumeSkillMapper.xml"/>
        <mapper resource="mapping/resumeLanguageMapper.xml"/>
        <mapper resource="mapping/resumeOtherMapper.xml"/>
        <mapper resource="mapping/recruitingRecordMapper.xml"/>
        <mapper resource="mapping/employeeMapper.xml"/>
        <mapper resource="mapping/areaMapper.xml"/>
        <mapper resource="mapping/schoolMapper.xml"/>
    </mappers>
</configuration>