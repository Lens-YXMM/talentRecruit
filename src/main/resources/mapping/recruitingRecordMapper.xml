<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapping.recruitingRecordMapper">
    <!-- 映射关系 -->
    <resultMap id="recruitingRecordResult" type="RecruitingRecord">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="jobId" column="job_id"/>
        <result property="department" column="department"/>
        <result property="location" column="location"/>
        <result property="status" column="status"/>
        <result property="resumePass" column="resume_pass"/>
        <result property="resumeDate" column="resume_date"/>
        <result property="examGrade" column="exam_grade"/>
        <result property="examDate" column="exam_date"/>
        <result property="examPass" column="exam_pass"/>
        <result property="interviewRecord" column="interview_record"/>
        <result property="interviewDate" column="interview_date"/>
        <result property="interviewPass" column="interview_pass"/>
        <result property="healthy" column="healthy"/>
        <result property="trainingStart" column="training_start"/>
        <result property="trainingEnd" column="training_end"/>
        <result property="trainingRecord" column="training_record"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="getRecruitingRecordByUserId" parameterType="int" resultMap="recruitingRecordResult">
        SELECT * FROM sys_recruiting_record WHERE user_id=#{userId}
    </select>
</mapper>